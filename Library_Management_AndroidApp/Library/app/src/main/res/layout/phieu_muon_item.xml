<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lime_300"
    android:orientation="horizontal"
    >
    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="sans-serif-thin"
                android:padding="4dp"
                android:text="Mã Phiếu"
                android:textColor="@color/GreenFirst"
                android:textColorHint="@color/Green"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mã Phiếu Mượn"
                android:id="@+id/tvMaPM"
                android:layout_weight="0.8"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:padding="4dp"
                android:textColorHint="@color/Green"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên TV:"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:textColorHint="@color/Green"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="Tên Thành Viên"
                android:id="@+id/tvTenTV1"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:textColorHint="@color/Green"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên Sách:"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:textColorHint="@color/Green"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên Sách"
                android:id="@+id/tvTenSach"
                android:layout_weight="0.7"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:textColorHint="@color/Green"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvTraSach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:fontFamily="sans-serif-thin"
                android:padding="4dp"
                android:text="Trả Sách"
                android:textColor="@color/GreenFirst"
                android:textColorHint="@color/Green"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:textColorHint="@color/Green"
                android:textStyle="bold"
                android:text="Tiền Thuê:"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tiền Thuê"
                android:id="@+id/tvTienThue"
                android:layout_weight="0.7"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:textColorHint="@color/Green"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:textColorHint="@color/Green"
                android:textStyle="bold"
                android:text="Ngày thuê:"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ngày"
                android:id="@+id/tvNgayPM"
                android:layout_weight="0.7"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/Green"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:textColorHint="@color/Green"
                android:textStyle="bold"
                android:text="Ngày trả:"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ngày trả"
                android:id="@+id/tvNgayTra"
                android:layout_weight="0.7"
                android:padding="4dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/GreenFirst"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/Green"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">


        <ImageView

            android:id="@+id/imgDeletePM"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_baseline_cancel_" />

    </LinearLayout>
</LinearLayout>