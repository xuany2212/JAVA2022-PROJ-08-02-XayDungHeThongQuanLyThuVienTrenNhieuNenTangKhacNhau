<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lime_300">
    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10">

        <TextView
            android:id="@+id/tvIdM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:padding="4dp"
            android:text="Member Id:"
            android:textColor="@color/GreenFirst"
            android:textColorHint="@color/GreenFirst"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNameM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:padding="4dp"
            android:text="Name:"
            android:textColor="@color/GreenFirst"
            android:textColorHint="@color/GreenFirst"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBirthM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:padding="4dp"
            android:text="Year of Birth:"
            android:textColor="@color/GreenFirst"
            android:textColorHint="@color/GreenFirst"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>
    <ImageView
        android:id="@+id/imgDeleteM"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_margin="4dp"
        android:src="@drawable/ic_baseline_cancel_"
        android:layout_marginRight="40dp"/>

</LinearLayout>