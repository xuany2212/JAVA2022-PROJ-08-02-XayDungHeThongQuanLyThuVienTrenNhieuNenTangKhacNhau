<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/welcome"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/edIdB"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner

        android:id="@+id/spTypeTob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/etNameB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:hint="Book name:"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />



    <EditText

        android:id="@+id/etRentPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:hint="Rental price:"
        android:inputType="number"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/etDiscountB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:hint="Discount:"
        android:inputType="number"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/etTacGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:hint="Author:"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText

        android:id="@+id/etSoLuongCP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:hint="Number copies:"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText

        android:id="@+id/etViTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:hint="Location:"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        >

        <Button
            android:id="@+id/btnSaveB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/GreenFirst"
            android:fontFamily="sans-serif-thin"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        android:backgroundTint="#4E4242"/>

        <Button
            android:id="@+id/btnCancelB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/GreenFirst"
            android:fontFamily="sans-serif-thin"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>




</LinearLayout>