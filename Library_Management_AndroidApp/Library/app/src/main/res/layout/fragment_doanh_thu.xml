<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:orientation="vertical"
    android:background="@drawable/welcome"
    tools:context=".fragment.RevenueFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/white"
        android:weightSum="3"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        <ImageView
            android:src="@drawable/date"
            android:background="@drawable/border"
            android:layout_width="0dp"
            android:backgroundTint="@color/Green"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/btnFromDate"/>

        <EditText
            android:id="@+id/edFromDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16sp"
            android:layout_weight="2"
            android:background="@color/white"
            android:fontFamily="sans-serif-thin"
            android:hint="From date"
            android:textColor="@color/GreenFirst"
            android:textColorHint="@color/GreenFirst"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageView
            android:src="@drawable/date"
            android:background="@drawable/border"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/Green"
            android:id="@+id/btnToDate"/>

        <EditText
            android:id="@+id/edToDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16sp"
            android:layout_weight="2"
            android:background="@color/white"
            android:fontFamily="sans-serif-thin"
            android:hint="To date"
            android:textColor="@color/GreenFirst"
            android:textColorHint="@color/GreenFirst"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/GreenFirst"
        android:fontFamily="sans-serif-thin"
        android:text="Revenue"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRevenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-thin"
        android:text="Revenue:"
        android:textColor="@color/GreenFirst"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>