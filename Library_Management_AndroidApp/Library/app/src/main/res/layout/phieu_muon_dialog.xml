<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edIdCs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner

        android:id="@+id/spIdMem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner

        android:id="@+id/spNameB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textColor="@color/GreenFirst"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp" />

    <TextView

        android:id="@+id/tvRemain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:hint="Remain:"
        android:inputType="number"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnDate"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/border"
            android:backgroundTint="@color/Green"
            android:src="@drawable/date" />

        <EditText

            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif-thin"
            android:hint="Ngày mượn"
            android:textColor="@color/GreenFirst"
            android:textColorHint="@color/GreenFirst"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnNgayTra"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/border"
            android:backgroundTint="@color/Green"
            android:src="@drawable/date" />

        <TextView

            android:id="@+id/tvNgayTra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif-thin"
            android:hint="Ngày trả"
            android:textColor="@color/GreenFirst"
            android:textColorHint="@color/GreenFirst"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <EditText

        android:id="@+id/etRentExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:hint="Tiền Thuê:"
        android:inputType="number"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox

        android:id="@+id/chkReturned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="Returned?"
        android:textColor="@color/GreenFirst"
        android:textColorHint="@color/GreenFirst"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSaveCs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/GreenFirst"
            android:fontFamily="sans-serif-thin"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelCs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/GreenFirst"
            android:fontFamily="sans-serif-thin"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>